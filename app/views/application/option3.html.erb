<div class="row">
  <h4>Pull jobs from API w/ off-site submission</h4>
</div>

<br>

<div class="row">
  <% @offices.each do |office| %>
    <div class="row">
      <h4><%= office["name"] %></h4>

      <% office["departments"].each do |department| %>
        <% if not department["jobs"].empty? %>
          <div class="card card-block">
            <h5><%= department["name"] %></h5>
            <div class="list-group">
            <% department["jobs"].each do |job| %>
              <a href="<%= job["absolute_url"] %>" class="job list-group-item" target="_blank"><%= job["title"] %></a>
            <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
